{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "module": "esnext",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": true,
    "typeRoots": ["node_modules/@types", "./src/types"],
    "moduleResolution": "node"
  }
}
